---
interface Props {
  href: string;
  texto: string;
  activo?: boolean;
}

const { href, texto, activo } = Astro.props;
const textoMinusculas = texto.toLowerCase()
---

<a
  class:list={[
    "w-px-2 py-[1px] pb-1",
    { 
      "border-b-[1px] border-b-[rgb(var(--color-gris-claro))] after:hidden": activo,
      "relative": !activo
    },
  ]}
  aria-label={"PÃ¡gina de " + textoMinusculas}
  href={href}>{texto}</a
>

<style>
  a::after{
    content: '';
    position: absolute;
    width: 100%;
    height: 1px; 
    background-color: rgb(var(--color-gris-claro));
    bottom: -1px;
    left: 0;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  a:hover::after {
    transform: scaleX(1);
  }
</style>
