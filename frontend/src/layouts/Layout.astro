---
import Header from "@comp/Header.astro";
import Footer from "@comp/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;

const { pathname } = Astro.url;

const esDoc = pathname === "/documentacion";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    {!esDoc && <Footer />}
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Fugaz+One&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&family=Fugaz+One&display=swap");
  :root {
    --color-gris-oscuro-calido: 41, 55, 55;
    --color-gris-grafito: 93, 99, 99;
    --color-btn-mostrar: 17, 17, 17;
    --color-gris-neutro: 145, 145, 143;
    --color-gris-marmol: 179, 178, 174;
    --color-gris-claro: 213, 219, 219;
    --fuente-conf: "Comfortaa";
  }
  html {
    font-family: var(--fuente-conf), system-ui, sans-serif;
    background: rgb(var(--color-gris-oscuro-calido));
    color: white;
  }
</style>
