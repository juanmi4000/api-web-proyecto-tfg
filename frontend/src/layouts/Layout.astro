---
import Header from "@comp/Header.astro";
import Footer from "@comp/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;

const { pathname } = Astro.url;

const esDoc = pathname === "/documentacion";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    {!esDoc && <Footer />}
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Fugaz+One&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&family=Fugaz+One&display=swap");
  :root {
    --color-fondo: 41, 55, 55;
    --color-btn-border: 213, 219, 219;
    --color-header: 93, 99, 99;
    --color-texto-blanco: 255, 255, 255;
    --color-btn: 17, 17, 17;
    --color-fondo-codigo: 179, 178, 174;
    --color-fondo-copiar: 217, 217, 217;
    --fuente-conf: "Comfortaa";
    --fuente-fugaz: "Fugaz One";
  }
  html {
    font-family: var(--fuente-conf), system-ui, sans-serif;
    background: rgb(var(--color-fondo));
    color: rgb(var(--color-texto-blanco));
  }
  body::-webkit-scrollbar {
    width: 4px; /* width of the entire scrollbar */
  }

  body::-webkit-scrollbar-track {
    background: transparent; /* color of the tracking area */
  }

  body::-webkit-scrollbar-track:hover {
    background: rgb(25, 25, 25); /* color of the tracking area */
  }

  body::-webkit-scrollbar-thumb {
    background-color: #767a7a; /* color of the scroll thumb */
    border-radius: 20px; /* roundness of the scroll thumb */
  }
  main::-webkit-scrollbar {
    width: 4px; /* Ajusta el ancho para que sea similar al de Firefox */
  }

  main::-webkit-scrollbar-track {
    background: transparent; /* Color de fondo de la pista */
  }
  
  main::-webkit-scrollbar-track:hover {
    background: #2b2b2b; /* Color de fondo de la pista */
  }

  main::-webkit-scrollbar-thumb {
    background-color: #888; /* Color del pulgar */
    border-radius: 10px; /* Bordes redondeados */
  }

  main::-webkit-scrollbar-thumb:hover {
    background-color: #555; /* Color del pulgar al pasar el rat√≥n por encima */
  }
</style>
